#include<stdio.h>
int main()
{
	int array[100],i,num;
	printf("enter the size of the array");
	scanf("%d",&num);
	printf("enter the elements of the array");
	for(i=0;i<num;i++)
	{
		scanf("%d",&array[i]);
		}
		printf("even number in the array are:\t");
		for(i=0;i<num;i++)
		{
			if(array[i]%2==0)
			{
				printf("%d\t",array[i]);
				}
				}
				printf("odd number in the array are:\t");
				for(i=0;i<num;i++)
				{
					if(array[i]%2!=0)
					{
						printf("%d\t",array[i]);
						}
						}
					 }
